extend ../../layouts/application

append variables
  - locals.currentPage = "downloads";
  - locals.language = "en";
  - locals.title = "Downloads | TogoVar";

block head
  each css in htmlWebpackPlugin.files.css
    link(href=css, rel="stylesheet")

block content
  main
    article.common-document
      header.header
        h2.title Downloads
      .contents
        section.section
          h3.sectiontitle
            | All variants in TogoVar
          ul
            li
              | Allele frequencies
              ul
                li
                  | GRCh38：
                  a(href='/downloads/release/current/grch38/frequency') tab-separated text
                  |
                  | |
                  |
                  a(href='/downloads/release/current/grch38/README.txt') README
                li
                  | GRCh37：
                  a(href='/downloads/release/current/grch37/frequency') tab-separated text
                  |
                  | |
                  |
                  a(href='/downloads/release/current/grch37/README.txt') README
            li
              | Molecular annotations
              ul
                li
                  | GRCh38：
                  a(href='/downloads/release/current/grch38/molecular_annotation') tab-separated text
                  |
                  | |
                  |
                  a(href='/downloads/release/current/grch38/README.txt') README
                li
                  | GRCh37：
                  a(href='/downloads/release/current/grch37/molecular_annotation') tab-separated text
                  |
                  | |
                  |
                  a(href='/downloads/release/current/grch37/README.txt') README
            p
            | Last updated：2022/11/1
        section.section
          h3.sectiontitle
            | Original files from depositors (some datasets)
          ul
            li
              | Variant frequencies of GEM Japan Whole Genome Aggregation (GEM-J WGA) panel
              ul
                li
                  | Allele frequencies
                ul
                  li
                    | GRCh38 (liftover from GRCh37)：
                    a(href='/downloads/gem_j_wga/grch38') VCF format
                    |
                    | |
                    |
                    a(href='/downloads/release/current/grch38/README.txt') README
                  li
                    | GRCh37：
                    a(href='/downloads/gem_j_wga/grch38') VCF format
                    |
                    | |
                    |
                    a(href='/downloads/release/current/grch37/README.txt') README
            p
            | Last updated：2021/11/29
            br
            | See
            a(href='/doc/datasets/gem_j_wga') the GEM-J WGA dataset page
            |
            | for more about the dataset.
